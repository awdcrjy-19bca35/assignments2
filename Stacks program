package dailyclasses; import java.util.Scanner; class Stack { int a[]; int top; Stack(int n)// constructor { a=new int[n]; // n is size of the array top=-1; } void push(int ele) // insert elements into stack { if(top==a.length-1) System.out.println(" The stack is overflow "); else { top++; a[top]=ele; } } void pop() // remove elements from stack { if(top==-1) System.out.println("There is no element in the stack"); else { System.out.println(" The element is removed from the stack "+a[top]); top--; } } void display() // display all elements of stack { if(top==-1) System.out.println(" Stack is empty "); else { for(int i=top;i>=0;i--) System.out.print(a[i]+" "); } } } public class Demo { public static void main(String args[]) { Scanner sc=new Scanner(System.in); System.out.println(" Enter size of the stack "); int n=sc.nextInt(); // size of the stack Stack obj=new Stack(n); // obj is the object int choice; do { System.out.println("1.Push"); System.out.println("2.Pop"); System.out.println("3.display"); System.out.println("4.Exit"); System.out.println("Enter your choice"); choice=sc.nextInt(); switch(choice) { case 1 : System.out.println(" Enter element into stack"); int ele=sc.nextInt(); obj.push(ele); break; case 2 : obj.pop(); break; case 3 : obj.display(); break; case 4 : System.exit(0); break; default : System.out.println(" You are choose wrong option "); } }while(choice!=4); } }
